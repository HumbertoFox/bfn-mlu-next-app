generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  user_id     Int    @id @default(autoincrement())
  name        String
  cpf         String @unique @db.VarChar(11)
  dateofbirth String
  username    String @unique
  phone       String @unique
  email       String @unique
  password    String @db.VarChar(200)
  role        Role   @default(USER)

  @@map("users")
}

enum Role {
  USER
  ADMIN
}